        font-size: 5vh;
        color: white;
        text-shadow: -3px 3px 10px #844f00;
    }
    .finalYear {
        margin-top: 32vh;
        margin-bottom: 5vh;
    }

    .imageCollage {
        width: 85vw;
        margin: auto;
        columns: 4;
        column-gap: 5px;

    }

    .imageCollage img{
        width: 100%;
        margin: 0 0 2.5px;
        overflow: hidden;
        break-inside: avoid;
        filter: grayscale(100%);
    }

    /* .secondHalfSecond .imageCollage img {
        width: 18vw;
    } */

    .finalYear .imageCollage {
        width: 60vw;
    }
    .firstHalfSecond .imageCollage {
        margin: 6vh 0;
    }
    .secondHalfSecond .imageCollage {
        margin: 20vh 0;
        position: relative;
        left: 37vw;
        column-count: 3;
        width: 60vw;
    }
    .imageCollage img:hover {
        transform: scale(1.1);
        filter: grayscale(0%);
    }

    .desc {
        display: none;
    }

    .isVisible {
        display: block;
        transition: none;
    }
    .isClicked {
        position: absolute;
        z-index: 50;
        width: 50vw;

    }

    #bigModal {
        background: rgb(255, 255, 255, 0.7);
        position: absolute;
        top: 0;
        bottom: 0;
        margin-left: -1vw;
        justify-content: center;
        align-items: flex-start;
        z-index: 50;
        display: none;
    }

    #innerModal {
        position: relative;
        width: 100vw;
    }

    #bigModal img {
        width: 90vh;
        margin-left: 25vw;
        filter: grayscale(0%);
        padding: 5vh;
    }
    #close {
        position: absolute;
        top: 5vh;
        right: 1vw;
        font-size: 8vh;
        z-index: 51;
    }
    #close:hover {
        color: darkorange;
        transform: scale(1.3);
        cursor: pointer;
    }


    /* TEXT */
    .projectInfo p {
        color: white;
        font-size: 2.5vh;
        background: linear-gradient(-90deg, rgba(115, 63, 0, 0.73), rgba(255, 152, 0, 0.77));
        padding: .5vw;
    }
    .projectInfo {
        position: relative;
        width: 60vw;
    }
    .finalYear .projectInfo {
        margin: 0 auto;
    }
    .firstHalfSecond .projectInfo {
        width: 65vw;
        left: 21.5vw;
        top: -32vh;
    }
    .secondHalfSecond .projectInfo {
        width: 55vw;
        top: -42vh;
    }
    .firstYear .projectInfo {
        width: 50vw;
        left: 30vw;
        top: -45vh;
    }

    @media (min-width: 300px) and (max-width: 1024px) and (orientation: portrait) {
        body {
            position: absolute;
        }

        .imageCollage img{
            width: 20vh;
        }
        .imageCollage {
            width: 100vw;
            margin: auto;
            columns: 3;
            column-gap: 10px;

        }
        .finalYear .imageCollage {
            width: 100vw;
        }

        #bigModal img {
            width: 150vw;
            margin: 0 auto;
            padding: 0;
            margin-top: 15vh;
        }
        #innerModal {
            width: fit-content;
        }
        #close {
            position: relative;
            top: 2vh;
            text-align: center;
        }
    }

</style>

