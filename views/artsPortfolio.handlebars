<style media="screen">
    body {
        background-image: url(/homeBackground.jpg);
        animation: fade-in .01s cubic-bezier(0.43, 0.26, 0.89, 1.04) both;

    }
    .skewDiv {
        position: absolute;
        background: linear-gradient(-148deg, rgba(103, 65, 9, 0.47), rgb(249, 155, 18));
        transform: rotate(-25deg);
        height: 100vh;
        width: 200vw;
        left: -50vw;
    }

